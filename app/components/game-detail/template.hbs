<div class="row">
  <div class="col-sm-12">
    <h3>{{game.name}}</h3>
  </div>
  <div class="detail col-sm-6 col-md-5">
    {{#if game.cover}}
      {{game-image game.cover game.name}}
    {{/if}}
    {{#if isAuthenticated}}
      <button class="detail btn btn-default">Backlog</button>
      <button class="detail btn btn-default">Played</button>
    {{/if}}
  </div>
  <div class="detail col-sm-6 col-md-7">
    <p>{{game.summary}}</p>
  </div>
</div>
